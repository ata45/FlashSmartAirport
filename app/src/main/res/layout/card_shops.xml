<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:id="@+id/cardViewShop"
        android:layout_margin="20dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="@dimen/cardRoundness"
        android:translationZ="5dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageShopResto"
                android:scaleType="centerCrop"/>

        <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/textShopTitle"
                android:background="#0F8DD8"
                android:layout_marginTop="122dp"
                android:textColor="@color/colorAppBackground"
                android:text="Shop Title"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:textSize="13sp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/textShopInfo"
                android:layout_below="@id/textShopTitle"
                android:layout_margin="0dp"
                android:background="#0F8DD8"
                android:layout_marginTop="122dp"
                android:textColor="@color/colorAppBackground"
                android:text="Shop Info"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="4dp"
                android:gravity="left"
                android:textSize="11sp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintCircleRadius="@dimen/cardRoundness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:id="@+id/cardDesc1"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/cardRoundness">

            <LinearLayout
                    android:id="@+id/ll_desc_transport"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent">

                <TextView
                        android:textStyle="bold"
                        android:id="@+id/transport_name"
                        android:layout_marginBottom="10dp"
                        android:text="@string/nama_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textSize="10sp"
                        android:textStyle="italic"
                        android:id="@+id/transport_time"
                        android:layout_marginBottom="10dp"
                        android:text="@string/nama_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp"/>

                <TextView
                        android:maxLines="2"
                        android:id="@+id/transport_desc"
                        android:text="@string/deskripsi_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout

            android:id="@+id/rl_card_transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                app:cardMaxElevation="@dimen/cardRoundness"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:id="@+id/cardImage1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:elevation="10dp"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/cardRoundness">

            <ImageView
                    android:id="@+id/image_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rl_fragment_home"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorBack">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                    <ImageView

                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:src="@drawable/blurred_airport"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"/>

                    <TextView
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:textAlignment="textEnd"
                            android:layout_alignParentEnd="true"
                            android:text="@string/welcome"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="45dp"/>


                    <ImageView
                            android:layout_alignParentBottom="true"
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/rectangle_6"
                            android:layout_marginStart="0dp"
                            android:layout_marginBottom="0dp"/>
                    <ImageView
                            android:id="@+id/cloud"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="200dp"
                            android:src="@drawable/cloud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:id="@+id/temp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="220dp"
                            android:layout_toEndOf="@+id/cloud"
                            android:src="@drawable/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/notation"
                            android:textColor="#ffffff"
                            android:text="O"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="220dp"
                            android:layout_toRightOf="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:text="F"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="230dp"
                            android:layout_toRightOf="@+id/notation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textColor="@color/white"
                            android:layout_marginTop="190dp"
                            android:text="@string/date"
                            android:layout_toEndOf="@+id/cloud"
                            android:id="@+id/date_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"/>
                    <TextView
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:layout_marginTop="31dp"
                            android:layout_toRightOf="@+id/cloud"
                            android:layout_below="@+id/date_now"
                            android:text="@string/kertajati"
                            android:layout_toEndOf="@+id/cloud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="93dp" android:layout_marginLeft="93dp"/>

                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


            </FrameLayout>
            <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:id="@+id/btn_flight"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ellipse"/>

                    <ImageView
                            android:src="@drawable/aeroplane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp"/>
                    <TextView
                            android:text="@string/flights"
                            android:textAlignment="center"
                            android:layout_below="@+id/btn_flight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/btn_check"
                            android:layout_centerHorizontal="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ellipse"/>
                    <ImageView
                            android:src="@drawable/check_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp"/>
                    <TextView
                            android:text="@string/check"
                            android:textAlignment="center"
                            android:layout_below="@+id/btn_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/btn_shop"
                            android:layout_centerHorizontal="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ellipse"/>
                    <ImageView
                            android:src="@drawable/shopping_bag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp"/>
                    <TextView
                            android:text="@string/shop_amp_resto"
                            android:textAlignment="center"
                            android:layout_below="@+id/btn_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/btn_transport"
                            android:layout_centerHorizontal="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ellipse"/>
                    <ImageView
                            android:src="@drawable/bus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp"/>
                    <TextView
                            android:text="@string/transport"
                            android:textAlignment="center"
                            android:layout_below="@+id/btn_transport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/btn_maps"
                            android:layout_centerHorizontal="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ellipse"/>
                    <ImageView
                            android:src="@drawable/placeholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp"/>
                    <TextView
                            android:text="@string/maps"
                            android:textAlignment="center"
                            android:layout_below="@+id/btn_maps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/btn_facility"
                            android:layout_centerHorizontal="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ellipse"/>
                    <ImageView
                            android:src="@drawable/hospital_buildings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp"/>
                    <TextView
                            android:text="@string/facilities"
                            android:textAlignment="center"
                            android:layout_below="@+id/btn_facility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"/>
                </RelativeLayout>
            </LinearLayout>


            <TextView
                    android:textColor="#000000"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/your_upcoming_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                    app:cardCornerRadius="@dimen/cardRoundness"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:id="@+id/rl_flight_schedule"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <FrameLayout
                                android:layout_centerVertical="true"
                                android:id="@+id/frame_image"
                                android:layout_width="100dp"
                                android:layout_height="100dp">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ellipse"/>
                            <ImageView
                                    android:id="@+id/home_image_plane"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/garuda"
                                    android:padding="5dp"
                                    android:layout_gravity="center"/>
                        </FrameLayout>
                        <LinearLayout
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_toEndOf="@+id/frame_image"
                                android:id="@+id/ll_text"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <TextView
                                    android:textStyle="bold"
                                    android:id="@+id/home_code_time_flight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/example_time"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"/>
                            <TextView
                                    android:id="@+id/home_from_to_flight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/nonstop_4h_jkt_jfk"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"/>
                            <TextView
                                    android:id="@+id/home_plane_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/garuda_indonesia"
                                    android:textSize="15sp"
                                    android:layout_marginTop="5dp"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                           android:padding="10dp"
                            android:id="@+id/txt_none_saved"
                            android:visibility="invisible"
                            android:textSize="23sp"
                            android:layout_centerInParent="true"
                            android:text="@string/tidak_ada_jadwal_di_simpan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/appBar_height"
            android:id="@+id/topBar">

        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorToolbarBase">

            <TextView
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/textAppBarHome"
                    android:text="@string/app_name"
                    android:textColor="@color/colorAppBackground"
                    android:textSize="20sp"/>

            <android.support.v7.widget.Toolbar
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="wrap_content"/>

        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>

</RelativeLayout>
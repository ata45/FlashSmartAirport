<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/cardRelative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

        <android.support.v7.widget.CardView
                android:id="@+id/cardDesc1"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/cardRoundness">


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/cardImage1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:elevation="5dp"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/cardRoundness">

            <ImageView
                    android:id="@+id/image_shop_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                android:id="@+id/cardDesc2"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="200dp"
                android:elevation="5dp"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/cardRoundness">


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_alignParentEnd="true"
                android:id="@+id/cardImage2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="180dp"
                android:elevation="5dp"
                android:translationZ="5dp"
                app:cardCornerRadius="@dimen/cardRoundness">

            <ImageView
                    android:id="@+id/image_shop_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>





</LinearLayout>